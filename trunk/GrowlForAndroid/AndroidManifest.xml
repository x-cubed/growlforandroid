<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.growlforandroid.client"
	android:versionCode="2"
	android:versionName="@string/app_version" >

	<supports-screens
		android:anyDensity="true"
		android:largeScreens="true"
		android:normalScreens="true"
		android:resizeable="true"
		android:smallScreens="true" />

	<application
		android:debuggable="true"
		android:description="@string/app_description"
		android:icon="@drawable/launcher"
		android:label="@string/app_name" >
		<activity
			android:name=".MainActivity"
			android:icon="@drawable/launcher"
			android:label="@string/app_label"
			android:launchMode="singleInstance" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<service android:name="GrowlListenerService" >
		</service>

		<activity android:name="Applications" >
		</activity>
		<activity android:name="Passwords" >
		</activity>
		<activity android:name="Preferences" >
		</activity>
		<activity android:name="Application" >
		</activity>
		<activity android:name="TypePreferences" >
		</activity>
		<activity android:name="Subscriptions" >
		</activity>

		<receiver android:name="DeviceEventReceiver" >
			<intent-filter>
				<action android:name="android.net.conn.CONNECTIVITY_CHANGE" >
				</action>
				<action android:name="android.net.wifi.STATE_CHANGE" >
				</action>
			</intent-filter>
		</receiver>
	</application>

	<uses-sdk android:minSdkVersion="5" />

	<uses-permission android:name="android.permission.INTERNET" >
	</uses-permission>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
	</uses-permission>
	<uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" >
	</uses-permission>
	<uses-permission android:name="android.permission.VIBRATE" >
	</uses-permission>

</manifest>